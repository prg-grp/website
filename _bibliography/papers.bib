  pages = {227--261},
  editor = {Chiba, Shigeru and Tanter, Éric and Bodden, Eric and Maoz, Shahar and Kienzle, Jörg},
  publisher = {Springer-Verlag},
  address = {Berlin/Heidelberg, Germany},
  isbn = {978-3-642-55098-0},
  doi = {10.1007/978-3-642-55099-7_7},
  keywords = {Reactive Programming, Functional-Reactive Programming, Object-Oriented Programming, Incremental Computation},
  abstract = {Reactive applications are difficult to implement. Traditional solutions based on event systems and the Observer pattern have a number of inconveniences, but programmers bear them in return for the benefits of OO design. On the other hand, reactive approaches based on automatic updates of dependencies -- like functional reactive programming and dataflow languages -- provide undoubted advantages but do not fit well with mutable objects.\par In this paper, we provide a research roadmap to overcome the limitations of the current approaches and to support reactive applications in the OO setting. To establish a solid background for our investigation, we propose a conceptual framework to model the design space of reactive applications and we study the flaws of the existing solutions. Then we highlight how reactive languages have the potential to address those issues and we formulate our research plan.},
}

@inproceedings{Salvaneschi:2014:Empirical,
